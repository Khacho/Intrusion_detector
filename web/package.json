        "uuid": "^3.1.0",
        "winston": "^2.3.1",
        "zone.js": "^0.8.4"
    },
    "devDependencies": {
        "@angular/cli": "1.2.4",
        "@angular/compiler-cli": "^4.3.6",
        "@angular/language-service": "^4.3.6",
        "@types/chai": "^4.0.4",
        "@types/mocha": "^2.2.42",
        "@types/node": "~6.0.60",
        "chai": "^4.1.1",
        "codelyzer": "~3.0.1",
        "concurrently": "^3.5.0",
        "gulp-typescript": "^3.1.0",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.1.0",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.1.1",
        "karma-cli": "~1.0.1",
